{
  "name": "anytext",
  "version": "1.0.1",
  "description": "AI-powered text enhancement tools for any input field using Chrome's Built-in AI APIs",
  "main": "build.js",
  "scripts": {
    "build": "node build.js",
    "build:production": "node build.js --production",
    "dev": "node build.js --watch",
    "clean": "rm -rf dist",
    "zip": "npm run clean && npm run build:production && cd dist && zip -r ../anytext-extension.zip .",
    "package": "npm run zip",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Linting JavaScript files...' && find . -name '*.js' -not -path './node_modules/*' -not -path './dist/*' | head -10",
    "validate": "npm run lint && npm run test",
    "start": "npm run dev"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "anytext",
    "text-enhancement",
    "translation",
    "proofreading",
    "content-generation",
    "gemini-nano",
    "chrome-built-in-ai",
    "productivity"
  ],
  "author": "Chris Johansson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisjohansson/anytext"
  },
  "homepage": "https://github.com/chrisjohansson/anytext#readme",
  "bugs": {
    "url": "https://github.com/chrisjohansson/anytext/issues"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "fs-extra": "^11.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "terser": "^5.44.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build.js",
      "!**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
