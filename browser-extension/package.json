{
  "name": "ai-input-enhancer",
  "version": "1.0.0",
  "description": "AI-powered text enhancement tools for any input field using Chrome's Built-in AI APIs",
  "main": "build.js",
  "scripts": {
    "build": "node build.js",
    "build:production": "node build.js --production",
    "dev": "node build.js",
    "clean": "rm -rf dist",
    "zip": "npm run build:production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "text-enhancement",
    "translation",
    "proofreading",
    "content-generation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "fs-extra": "^11.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "terser": "^5.44.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "core/**/*.js",
      "!core/**/*.test.js"
    ]
  }
}
